@{
    ViewBag.Title = "Home Page";
}

<h1>Health Care</h1>
<p class="lead">Health Care je probna aplikacija koja ima cilj da omogući zdravstvenu zaštitu radnika i olakša vođenje evidencije o pacijentima, pregledima i lekarima.</p>    
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Pics/hc0.jpg" alt="dr 1" style="width:100%;">
        </div>
        <div class="item">
            <img src="~/Pics/hc1.jpg" alt="dr 2" style="width:100%;">
        </div>
        <div class="item">
            <img src="~/Pics/hc2.jpg" alt="dr 3" style="width:100%;">
        </div>
        <div class="item">
            <img src="~/Pics/hc3.jpg" alt="dr 3" style="width:100%;">
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
